<Page x:Class="WinMaths.src.views.GraphicTableUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinMaths.src.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GraphicTableUI">

    <!--StackPanel para la tabla-->
    <StackPanel Margin="5" Width="750" Height="130">
        <!-- Tabla de tipo DataGrid-->
        <DataGrid Width="750" Height="130"
                      AutoGenerateColumns="False"
                      Name="tableGrid" >
            <DataGrid.Columns>
                    <DataGridCheckBoxColumn MinWidth="50" 
                                            Header="Visible"
                                            Binding="{Binding Path=isVisible}"/>
                    <DataGridComboBoxColumn MinWidth="250" 
                                            Header="Color"/>
                    <DataGridTextColumn MinWidth="400" 
                                        Header="Function"
                                        Binding="{Binding Path=name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>
